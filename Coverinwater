#include <bits/stdc++.h>
using namespace std;
 
#define fast_io() ios::sync_with_stdio(false); cin.tie(0);
#define vi vector<int>
#define all(v) (v).begin(), (v).end()
#define pb push_back
 
const int MOD = 1e9 + 7;
 
int mod_add(int a, int b) { return ((a % MOD) + (b % MOD)) % MOD; }
int mod_mul(int a, int b) { return ((a % MOD) * (b % MOD)) % MOD; }
 
void solve() {
    int n;
    cin >> n;
   string s;
   cin >> s;
   
   int cnt=0,dot=0;
   for(int i=0;i<n;i++){
       if(s[i]=='.'){
           dot++;
       if(i>0 && i<n-1 && s[i-1]=='.' && s[i+1]=='.'){
           cnt++;
       }
   }
   }
   if(cnt>0){
       cout << 2 << "\n";
   }
   else{
       cout << dot << "\n";
   }
}
 
int main() {
    fast_io();
    int t;
    cin >> t;
    while (t--) solve();
    return 0;
}