#include <bits/stdc++.h>
using namespace std;
 
#define fast_io() ios::sync_with_stdio(false); cin.tie(0);
#define vi vector<int>
#define all(v) (v).begin(), (v).end()
#define pb push_back
 
const int MOD = 1e9 + 7;
 
int mod_add(int a, int b) { return ((a % MOD) + (b % MOD)) % MOD; }
int mod_mul(int a, int b) { return ((a % MOD) * (b % MOD)) % MOD; }
 
void solve() {
     int n, k, x;
    cin >> n >> k >> x;
    if (k == 1) {
        if (x == 1) {
            cout << "NO\n";
        } else {
            cout << "YES\n" << n << "\n";
            for (int i = 0; i < n; i++) cout << 1 << " ";
            cout << "\n";
        }
        return;
    }
 
 
    if (x != 1) {
        cout << "YES\n" << n << "\n";
        for (int i = 0; i < n; i++) cout << 1 << " ";
        cout << "\n";
        return;
    }
 
 
    if (n % 2 == 0) {
        cout << "YES\n" << n / 2 << "\n";
        for (int i = 0; i < n / 2; i++) cout << 2 << " ";
        cout << "\n";
    } else {
        if (k >= 3) {
            cout << "YES\n" << (n / 2) << "\n";
            for (int i = 0; i < (n / 2) - 1; i++) cout << 2 << " ";
            cout << 3 << "\n";
        } else {
            cout << "NO\n";
        }
    }
}
 
int main() {
    fast_io();
    int t;
    cin >> t;
    while (t--) solve();
    return 0;
}
 /*
 time-compleaxity: O(t.n)
 space-complexity: O(1)
 */